{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "paths": {
      "@adottaungatto/ui/*": ["packages/ui/src/*"],
      "@adottaungatto/config/*": ["packages/config/src/*"],
      "@adottaungatto/types/*": ["packages/types/src/*"],
      "@adottaungatto/sdk/*": ["packages/sdk/src/*"]
    }
  }
}
