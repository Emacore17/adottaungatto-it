{
  "name": "@adottaungatto/api",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/main.js",
    "lint": "biome check .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "test:smoke": "tsx scripts/smoke-health.ts",
    "test:smoke:listings": "tsx scripts/smoke-listings-repository.ts",
    "test:smoke:listings-media": "tsx scripts/smoke-listings-media-schema.ts",
    "test:smoke:media-upload": "tsx scripts/smoke-media-upload.ts",
    "minio:bootstrap": "tsx scripts/minio-bootstrap-buckets.ts",
    "geo:sync": "tsx scripts/geo-sync-istat.ts",
    "auth:seed": "tsx scripts/keycloak-seed-demo-users.ts",
    "auth:token": "tsx scripts/keycloak-get-token.ts",
    "db:migrate": "tsx scripts/db-migrate.ts",
    "db:seed": "tsx scripts/db-seed.ts"
  },
  "dependencies": {
    "@adottaungatto/config": "workspace:*",
    "@adottaungatto/types": "workspace:*",
    "@aws-sdk/client-s3": "^3.882.0",
    "@fastify/cors": "^10.1.0",
    "@nestjs/common": "^11.0.20",
    "@nestjs/core": "^11.0.20",
    "@nestjs/platform-fastify": "^11.0.20",
    "dotenv": "^16.4.7",
    "jose": "^5.10.0",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@nestjs/testing": "^11.0.20",
    "@types/node": "^22.13.10",
    "@types/pg": "^8.15.4",
    "@types/supertest": "^6.0.3",
    "supertest": "^7.1.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8",
    "xlsx": "^0.18.5"
  }
}
